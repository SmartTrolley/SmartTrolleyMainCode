<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox id="VBox" alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="600.0" spacing="0.0" styleClass="containerMain" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="smarttrolleygui.CreateNewListScreenController">
  <children>
    <ImageView fitHeight="150.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" smooth="true">
      <image>
        <Image url="@../img/companyLogoCropped.png" />
      </image>
      <VBox.margin>
        <Insets bottom="20.0" top="10.0" />
      </VBox.margin>
    </ImageView>
    <Line endX="575.0" startX="0.0" strokeLineCap="ROUND" />
    <VBox id="VBox" alignment="CENTER" spacing="0.0" VBox.vgrow="ALWAYS">
      <children>
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Label text="Please enter a name for the new list:" />
            <TextField fx:id="listNameTextField" prefWidth="200.0" promptText="" text="" />
          </children>
          <padding>
            <Insets bottom="10.0" />
          </padding>
        </HBox>
        <Label fx:id="notifierLabel" styleClass="labelForUserNotices" text="" visible="false" />
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Button fx:id="createNewListButton" mnemonicParsing="false" onAction="#createNewList" prefHeight="75.0" prefWidth="200.0" styleClass="buttonLarge" text="Create new list" textAlignment="LEFT" textFill="BLACK" underline="false" wrapText="false" />
            <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#loadStartScreen" prefHeight="75.0" prefWidth="200.0" styleClass="buttonLarge" text="Go back" textAlignment="LEFT" textFill="BLACK" underline="false" wrapText="false" />
          </children>
          <padding>
            <Insets top="50.0" />
          </padding>
        </HBox>
      </children>
      <VBox.margin>
        <Insets top="75.0" />
      </VBox.margin>
    </VBox>
    <HBox alignment="CENTER" fillHeight="false" prefHeight="21.0" prefWidth="600.0" VBox.vgrow="NEVER">
      <children>
        <Label text="Create your shopping list online @ " />
        <Hyperlink text="www.smartrolley.org" />
      </children>
      <VBox.margin>
        <Insets top="20.0" />
      </VBox.margin>
    </HBox>
  </children>
  <stylesheets>
    <URL value="@../StyleSheet.css" />
  </stylesheets>
</VBox>
